CREATE TABLE User (
    id TEXT NOT NULL PRIMARY KEY,
    email TEXT NOT NULL,
    password TEXT NOT NULL,
    verified INTEGER AS Boolean DEFAULT 0
);

insert:
INSERT INTO User(id, email, password, verified) VALUES (?, ?, ?, ?);

update:
UPDATE User SET email = ?, password = ?, verified = ? WHERE id = ?;

findById:
SELECT id, email, password, verified FROM User WHERE id = ?;

findByEmail:
SELECT id, email, password, verified FROM User WHERE email = ?;

exists:
SELECT EXISTS (SELECT id FROM User WHERE email = ?);
