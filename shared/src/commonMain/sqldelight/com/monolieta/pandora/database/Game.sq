CREATE TABLE Game (
    id TEXT NOT NULL PRIMARY KEY,
    name TEXT NOT NULL,
    description TEXT NOT NULL
);

findAll:
SELECT * FROM Game;

findById:
SELECT * FROM Game WHERE id = ?;

insert:
INSERT INTO Game(id, name, description) VALUES(?, ?, ?);

update:
UPDATE Game SET name = ?, description = ? WHERE id = ?;

exists:
SELECT EXISTS (SELECT id FROM Game WHERE id = ?);